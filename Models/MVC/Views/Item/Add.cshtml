@{
    Layout = "_Layout";
}
@model Item;
<h1 class="text-center text-capitalize  mb-2">add item</h1>

<form asp-controller="Item" asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-xs-6 col-md-6 form-group">
            <input class="form-control" asp-for="Name" placeholder="Name" required autofocus />
        </div>
        <div class="col-xs-6 col-md-6 form-group">
            <input class="form-control" asp-for="Price" placeholder="Price" required />
        </div>
        <div class="row mt-5">
            <div class="col-xs-12 col-md-12 form-group">
                <button class="btn btn-primary pull-right" type="submit">Submit</button>
            </div>
        </div>
    </form>