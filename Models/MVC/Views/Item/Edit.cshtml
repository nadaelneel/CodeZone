@using Models
@{
    Layout = "_Layout";
    Item item = ViewData["item"] as Item;
}
<h1 class="text-center  text-capitalize mb-2">edit item</h1>

@model Item;


<form asp-controller="Item" asp-action="Edit" method="post" enctype="multipart/form-data">

    <div class="row">
        <div class="col-12 form-group">
            <input asp-for="Id" hidden />
        </div>
        <div class="col-xs-6 col-md-6 form-group">
            <input class="form-control" asp-for="Name" value="@item.Name" required autofocus />
        </div>
        <div class="col-xs-6 col-md-6 form-group">
            <input class="form-control" asp-for="Price" value="@item.Price" required />
        </div>
    </div>
   <div class="row mt-5">
            <div class="col-xs-12 col-md-12 form-group">
                <button class="btn btn-primary pull-right" type="submit">Submit</button>
            </div>
  </div>
   
</form>