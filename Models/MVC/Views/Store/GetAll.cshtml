@using Models
@{
    Layout = "_Layout";
    List<Store> stores = ViewData["stores"] as List<Store>;
}
<h1 class="text-center  mb-2">All Stores</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var store in stores)
        {
            <tr>
                <th scope="row">#</th>
                <td>@store.Name</td>
                <td>@store.Address</td>
                <td>
                    <a href="/Store/Edit?id=@store.Id" class="btn btn-sm btn-primary">Edit</a>

                    <a href="/Store/Delete?id=@store.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }


    </tbody>
</table>
